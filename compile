 #!/bin/bash

# Make a temp dir 
mkidr temp

# Compile into the temp dir
javac ./src/*.java -d temp

#Move over our source code to the root - Add any new classes here too
mv temp/SimpleLeader.class ./SimpleLeader.class
mv temp/SimpleLeader$ExitTask.class ./SimpleLeader$ExitTask.class

# clean up
rm -r temp